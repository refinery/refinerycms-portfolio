<div id='records' class='tree'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
  <% end %>
  <% if @portfolio_entries.any? %>
    <%= render :partial => 'sortable_list' %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_portfolio_entries_yet') %>
        </strong>
      <% else %>
        <%= t('shared.admin.search.no_results') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search",
                 :locals => {:url => admin_portfolio_entries_url} %>
    </li>
    <li>
      <%= link_to t('.create_new_portfolio_entry'),
                  new_admin_portfolio_entry_url,
                  :class => "add_icon" %>
    </li>
   <% if @portfolio_entries.many? and !searching? %>
    <li>
      <%= link_to t('.reorder_portfolio'), "",
                  :id => "reorder_action",
                  :class => "reorder_icon" %>
      <%= link_to t('.reorder_portfolio_done'), "",
                  :id => "reorder_action_done",
                  :style => "display: none;",
                  :class => "reorder_icon" %>
    </li>
   <% end %>
  </ul>
</div>
<% content_for :head_after_javascript_libraries,
               javascript_include_tag('refinery/nestedsortables.js') if Refinery.version < '0.9.9' -%>
<%= render :partial => "/shared/admin/make_sortable",
           :locals => { :tree => ::Refinery::Portfolio.multi_level? } if @portfolio_entries.many? %>
