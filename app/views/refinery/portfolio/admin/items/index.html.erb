<section id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %></h2>
    <% if @items.any? %>
      <%= render :partial => 'items', :collection => @items %>
    <% else %>
      <p><%= t('.no_results', :scope => 'refinery.admin.search') %></p>
    <% end %>
  <% else %>
    <% if @items.any? %>
      <%= will_paginate @items %>
      <%= render :partial => "sortable_list" %>
      <%= will_paginate @items %>
    <% else %>
      <p>
        <strong>
          <%= t(:no_items_yet, :scope => 'refinery.portfolio.admin.items.records') %>
        </strong>
      </p>
    <% end %>
  <% end %>
</section>

<section id='actions'>
  <%= render :partial => 'actions' %>
</section>

<%= render '/refinery/admin/make_sortable', :tree => false if @items.many? %>
